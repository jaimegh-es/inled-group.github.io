        <script is:inline type="text/javascript">
            function googleTranslateElementInit() {
              new google.translate.TranslateElement({pageLanguage: 'es', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
              if (typeof window.setupGoogleTranslateSwitch === 'function') {
                window.setupGoogleTranslateSwitch();
              }
            }
            </script>
            
            <script is:inline type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    </head>
    <body>
        <CloudflareDialog />
        <slot />
    </body>
    <script>
          // Usar 'client:load' o una directiva similar en Astro para hidratar este componente
