<script>
    // Función para hacer scroll suave al ancla
    function smoothScrollTo(targetId) {
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
            targetElement.scrollIntoView({ behavior: 'smooth' });
        }
    }

    // Escuchar clics en los enlaces de ancla
    document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            const href = this.getAttribute('href');
            const targetId = href.substring(href.indexOf('#'));

            // Si ya estamos en la página de inicio, hacemos scroll manualmente
            if (window.location.pathname === '/') {
                e.preventDefault();
                smoothScrollTo(targetId);
                // Actualizamos el hash en la URL sin recargar la página
                history.pushState(null, null, targetId);
            }
            // Si estamos en otra página, dejamos que Astro navegue
            // y el siguiente script se encargará del scroll.
        });
    });

    // Escuchar el evento de carga de página de Astro
    document.addEventListener('astro:page-load', () => {
        // Si la URL tiene un hash y estamos en la página de inicio
        if (window.location.pathname === '/' && window.location.hash) {
            // Damos un pequeño respiro para que todo cargue antes de hacer scroll
            setTimeout(() => {
                smoothScrollTo(window.location.hash);
            }, 100);
        }
    });
</script>